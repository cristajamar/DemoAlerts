<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemoAlerts.Views.LoginView">
  <StackLayout>
    <Entry Text="{Binding Login}" Keyboard="Email" Placeholder="email@server.com"></Entry>
    <Entry Text="{Binding Password}" IsPassword="True" Placeholder="password"></Entry>
    <Button Text="Login" Command="{Binding LoginCmd}"></Button>
  </StackLayout>
</ContentPage>